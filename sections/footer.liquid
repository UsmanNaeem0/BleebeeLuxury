{% comment %}
  Footer section
{% endcomment %}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_about",
      "label": "Footer About Text",
      "default": "Premium Milk & Honey skincare products crafted with nature's finest ingredients to nourish and enhance your natural glow."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    /*
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    }
    */
  ]
}
{% endschema %}

<footer class="footer" data-testid="footer">
  <div class="footer__container">
    <div class="footer__grid">
      <div class="footer__column">
        <div class="footer__brand">
          <div class="footer__logo-icon">
            <span class="footer__logo-text">F</span>
          </div>
          <span class="footer__brand-name">Feezish</span>
        </div>
        <p class="footer__about" data-testid="text-footer-about">
          {{ section.settings.footer_about | default: "Premium Milk & Honey skincare products crafted with nature's finest ingredients to nourish and enhance your natural glow." }}
        </p>
      </div>

      <div class="footer__column">
        <h3 class="footer__heading" data-testid="text-footer-quick-links-title">Quick Links</h3>
        <ul class="footer__list">
          <li>
            <a href="#shop" class="footer__link" data-testid="link-footer-shop">Shop</a>
          </li>
          <li>
            <a href="#about" class="footer__link" data-testid="link-footer-about">About</a>
          </li>
          <li>
            <a href="#contact" class="footer__link" data-testid="link-footer-contact">Contact</a>
          </li>
          <li>
            <a href="#faqs" class="footer__link" data-testid="link-footer-faqs">FAQs</a>
          </li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__heading" data-testid="text-footer-customer-care-title">Customer Care</h3>
        <ul class="footer__list">
          <li>
            <a href="#" class="footer__link" data-testid="link-footer-shipping-info">Shipping Info</a>
          </li>
          <li>
            <a href="#" class="footer__link" data-testid="link-footer-returns">Returns</a>
          </li>
          <li>
            <a href="#" class="footer__link" data-testid="link-footer-track-order">Track Order</a>
          </li>
          <li>
            <a href="#" class="footer__link" data-testid="link-footer-privacy-policy">Privacy Policy</a>
          </li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__heading" data-testid="text-footer-follow-us-title">Follow Us</h3>
        <p class="footer__social-text">
          Stay connected for updates and beauty tips
        </p>
        <div class="footer__social">
          <a 
            href="{{ section.settings.instagram_url | default: '#' }}" 
            class="footer__social-link" 
            aria-label="Instagram"
            data-testid="link-footer-instagram"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a 
            href="{{ section.settings.facebook_url | default: '#' }}" 
            class="footer__social-link" 
            aria-label="Facebook"
            data-testid="link-footer-facebook"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          {% comment %}  <-- ADD THIS LINE HERE
          <a 
            href="{{ section.settings.pinterest_url | default: '#' }}" 
            class="footer__social-link" 
            aria-label="Pinterest"
            data-testid="link-footer-pinterest"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.75 8.17 6.56 9.71-.09-.79-.17-2.01.03-2.87.19-.84 1.23-5.58 1.23-5.58s-.31-.62-.31-1.54c0-1.44.84-2.52 1.88-2.52.89 0 1.32.67 1.32 1.47 0 .89-.57 2.22-.86 3.45-.24 1.03.52 1.87 1.53 1.87 1.84 0 3.25-1.94 3.25-4.75 0-2.48-1.78-4.22-4.32-4.22-2.94 0-4.66 2.21-4.66 4.49 0 .89.34 1.84.77 2.36.08.1.09.19.07.29-.07.3-.24.94-.27 1.07-.04.17-.14.21-.33.13-1.24-.58-2.02-2.4-2.02-3.86 0-3.15 2.29-6.05 6.6-6.05 3.47 0 6.16 2.47 6.16 5.77 0 3.44-2.17 6.21-5.18 6.21-1.01 0-1.96-.53-2.29-1.22l-.62 2.37c-.23.89-.85 2.01-1.27 2.69.96.3 1.98.45 3.02.45 5.52 0 10-4.48 10-10S17.52 2 12 2z"></path>
            </svg>
          </a>
          <a 
            href="{{ section.settings.twitter_url | default: '#' }}" 
            class="footer__social-link" 
            aria-label="Twitter"
            data-testid="link-footer-twitter"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          {% endcomment %}
        </div>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright" data-testid="text-footer-copyright">
        © {{ 'now' | date: "%Y" }} Feezish — Crafted with Love, Milk & Honey. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: hsl(var(--secondary) / 0.4);
    border-top: 4px solid hsl(var(--primary) / 0.3);
  }

  .footer__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  @media (min-width: 768px) {
    .footer__container {
      padding: 4rem 1rem;
    }
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }

  .footer__brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .footer__logo-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: linear-gradient(to bottom right, hsl(var(--primary)), hsl(42 100% 69%));
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer__logo-text {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: bold;
    color: hsl(var(--primary-foreground));
  }

  .footer__brand-name {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: bold;
    background: linear-gradient(to right, hsl(var(--primary)), hsl(38 100% 50%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer__about {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.75;
  }

  .footer__heading {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin-bottom: 1rem;
  }

  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer__link:hover {
    color: hsl(var(--primary));
  }

  .footer__social-text {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    margin-bottom: 1rem;
  }

  .footer__social {
    display: flex;
    gap: 0.75rem;
  }

  .footer__social-link {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    text-decoration: none;
  }

  .footer__social-link:hover {
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .footer__bottom {
    border-top: 1px solid hsl(var(--border));
    padding-top: 2rem;
  }

  .footer__copyright {
    text-align: center;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
</style>

